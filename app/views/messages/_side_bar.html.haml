.sideBar
  .sideBar__header
    .sideBar__sideheader
      .sideBar__sidebox
        .sideBar__username
          = current_user.name
        .sideBar__iconlist
          = link_to new_group_path, class:"sideBar__lefticon" do
            = icon("fas", "edit") 
          = link_to edit_user_path(current_user), class: "sideBar__righticon" do
            =icon("fas", "cog")
  .sideBar__grouplist
    - current_user.groups.each do |group|
      .sideBar__groups
        = link_to group_messages_path(group) do
          .sigeBar__name
            = group.name
          .sideBar__message
            = group.show_last_message