.mainChat
  .mainChat__header
    .mainChat__box
      .mainChat__groupname
        bbbb
      .mainChat__member
        Member:bbbb
    = link_to "#", class: "mainChat__edit" do
      Edit
  .mainChat__messages
    = render @messages
  .Form
    = form_with model: [@group, @message], html: {class: "Form"}, local: true do |f|
      .mainChat__form
        .mainChat__inputbox
          = f.text_field :content, class: 'inputbox__text', placeholder: 'type a message'
          = f.label :image, class: 'inputbox__image' do
            = icon('far', 'image', class: 'inputbox__image')
            = f.file_field :image, class: 'inputbox__image__file'
        = f.submit 'Send', class: 'submit-btn'
